Class ASPJson

'------------------------------------------------------------------------------------------------------------------------------------------------------
'------------------------------------------------------------------------------------------------------------------------------------------------------
	'private PODE SOMENTE SER CRIADO DENTRO DA CLASSE
	private i
	private json
	private auxiliar
	private chave
	private valor


'------------------------------------------------------------------------------------------------------------------------------------------------------
	Public Property Let LetChave(param) 
	   chave = param 
	End Property 
'------------------------------------------------------------------------------------------------------------------------------------------------------
	Public Property Get GetChave() 
	   GetChave = chave 
	End Property 
'------------------------------------------------------------------------------------------------------------------------------------------------------
	Public Property Let LetValor(param) 
	   valor = param 
	End Property 
'------------------------------------------------------------------------------------------------------------------------------------------------------
	Public Property Get GetValor() 
	   GetValor = valor 
	End Property 

'------------------------------------------------------------------------------------------------------------------------------------------------------
	function Cria_Json()

		json = "["

		for i = 0 to ubound(chave) - 1
			json = json & "{" & chave(i) & ":""" & valor(i) & """}, "
		next

		json = mid(json, 1, len(json) - 2) & "]"

		Cria_Json = json

	end function
